{
  "compilerOptions": {
    "sourceMap": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "ES2020",
    "lib": ["ES2020", "dom"],
    "strict": true,
    "typeRoots": ["./node_modules/phaser/types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
