{
  "version": "0.2.0",
  "configurations": [
    {
      "command": "npm run dev",
      "name": "Debug: npm run dev",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Debug Backend",
      "program": "${workspaceFolder}/src/server/index.ts"
    },
    {
      "name": "Debug in Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "port": 9222,
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "trace": true,
      "smartStep": true
    }
  ]
}
